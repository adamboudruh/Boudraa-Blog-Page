
<div>
  <h2 class="login-title p-3 mb-0 mt-3">Please Sign Up to View Posts</h2>
  <form class="form login-form signup-form m-4 p-3">
    <div class="form-group m-3">
      <label for="username-signup">Username:</label>
      <input class="form-control" type="text" id="username-signup" />
    </div>
    <div class="form-group m-3">
      <label for="email-signup">Email:</label>
      <input class="form-control" type="text" id="email-signup" />
    </div>
    <div class="form-group m-3">
      <label for="password-signup">Password:</label>
      <input class="form-control" type="password" id="password-signup" />
    </div>
    <div class="form-group m-3">
     <button class="btn py-2 px-3" type="submit">Sign Up</button>
    </div>
  </form>
</div>

<script src="/js/signup.js"></script>
